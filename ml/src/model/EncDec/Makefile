export PYTHONPATH:=$(PYTHONPATH):$(ENCDEC_SRC_DIR)

MODEL_MODULE = $(ENCDEC_SRC_DIR)/EncDec.py

MODEL_NAME = EncDec
MODEL = $(MODEL_OUTPUT_DIR)/$(MODEL_NAME).h5

EVALUATION = $(EVALUATION_OUTPUT_DIR)/$(MODEL_NAME)_metrics.csv

$(MODEL): $(ENCDEC_SRC_DIR)/train_EncDec_model.py \
		$(MODEL_MODULE) \
		$(PREPROCESSED_TRAINING_ARGUMENTS) \
		$(PREPROCESSED_VALIDATION_ARGUMENTS) \
		$(WORD_EMBEDDING) $(SENTIMENT_EMBEDDING)
	$(PYTHON) $^ $@
	@echo
